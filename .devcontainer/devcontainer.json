{
    "name": "Ai Bootcamps Standardized Environment",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "features": {
        "ghcr.io/devcontainers/features/docker-in-docker:1": {
            "version": "latest"
        }
    },
    "forwardPorts": [
        11434,
        4000,
        5678,
        3000
    ],
    "postCreateCommand": "bash .antigravity/boot.sh",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-azuretools.vscode-docker",
                "ms-vscode-remote.remote-containers"
            ]
        }
    }
}